<% var message; %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IT-Labs</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,300;0,400;0,800;1,900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/css/splide.min.css">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>

<%- include("partials/header-before-login.ejs", {relativePath:"../"}) %>

<section class="u-vpadding">
    <div class="login-container">
        <form id="login__form" action="/phoneConfirmation/validate-secret" method="post">
            <div class="login__input__container">
                <label for="token" class="login__label">Token received on your phone</label>
                <div>
                    <input type="text" id="token" name="token" class="login__input color-section--grey-light" required>
                </div>
            </div>
            <div class="login__input__container">
                <button id="signupButton" class="login__submit">Verify phone number</button>
            </div>
            <div id="loginMessage" class="login__input__container"><%= message %></div>
        </form>
    </div>
</section>
<%- include("partials/footer.ejs", {relativePath:"../"}) %>

<!-- <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script> -->
<script src="../scripts/bundle.js"></script>
</body>

</html>